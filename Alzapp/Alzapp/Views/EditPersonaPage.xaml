<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Alzapp.Views.EditPersonaPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             xmlns:magic="clr-namespace:MagicGradients;assembly=MagicGradients"
             xmlns:controls="clr-namespace:Alzapp.NControls"
         	 NavigationPage.HasNavigationBar="False">
    <Grid>
        <magic:GradientView VerticalOptions="FillAndExpand">
            <magic:CssGradientSource>
                <![CDATA[linear-gradient(41deg, rgba(107, 107, 107, 0.04) 0%, rgba(107, 107, 107, 0.04) 8%,rgba(31, 31, 31, 0.04) 8%, rgba(31, 31, 31, 0.04) 100%),linear-gradient(9deg, rgba(228, 228, 228, 0.04) 0%, rgba(228, 228, 228, 0.04) 62%,rgba(54, 54, 54, 0.04) 62%, rgba(54, 54, 54, 0.04) 100%),linear-gradient(124deg, rgba(18, 18, 18, 0.04) 0%, rgba(18, 18, 18, 0.04) 37%,rgba(233, 233, 233, 0.04) 37%, rgba(233, 233, 233, 0.04) 100%),linear-gradient(253deg, rgba(201, 201, 201, 0.04) 0%, rgba(201, 201, 201, 0.04) 55%,rgba(47, 47, 47, 0.04) 55%, rgba(47, 47, 47, 0.04) 100%),linear-gradient(270deg, rgba(172, 172, 172, 0.04) 0%, rgba(172, 172, 172, 0.04) 33%,rgba(26, 26, 26, 0.04) 33%, rgba(26, 26, 26, 0.04) 100%),linear-gradient(64deg, rgba(11, 11, 11, 0.04) 0%, rgba(11, 11, 11, 0.04) 38%,rgba(87, 87, 87, 0.04) 38%, rgba(87, 87, 87, 0.04) 100%),linear-gradient(347deg, rgba(199, 199, 199, 0.04) 0%, rgba(199, 199, 199, 0.04) 69%,rgba(4, 4, 4, 0.04) 69%, rgba(4, 4, 4, 0.04) 100%),linear-gradient(313deg, rgba(36, 36, 36, 0.04) 0%, rgba(36, 36, 36, 0.04) 20%,rgba(91, 91, 91, 0.04) 20%, rgba(91, 91, 91, 0.04) 100%),linear-gradient(90deg, rgb(72,10,10),rgba(228,35,35, 0.77))]]>
            </magic:CssGradientSource>
        </magic:GradientView>
        <StackLayout
        	BindingContext="{Binding EditPersona}"
            Padding="5">
            <Grid>
                <StackLayout
                        HeightRequest="30">
                    <Frame CornerRadius="5"
                                BackgroundColor="#101010"
                                Padding="0,38,0,0"
                                Opacity="0.6"
                                HasShadow="False"
                                Grid.Column="0"
                                Grid.Row="0"  >

                    </Frame>

                </StackLayout>
                <StackLayout Orientation="Horizontal"
                        HeightRequest="30"
                        Margin="20,3,20,3">
                    <ImageButton
                	        Command="{Binding BackCommand}"
                            Source="back.png">
                    </ImageButton>
                    <StackLayout HorizontalOptions="CenterAndExpand"
                         VerticalOptions="CenterAndExpand"
                             HeightRequest="60">
                        <Label Text="Editar Persona"
                            FontAttributes="Bold"
                            FontSize="Title" 
                            TextColor="White"/>
                    </StackLayout>
                    <Image Source="alzapp.png"/>

                </StackLayout>
            </Grid>
            <ScrollView>
            <StackLayout
            	Padding="10">
                <Image
                	HeightRequest="120"
                	Source="{Binding ImageUrl}">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ChangeImageCommand}"/>
                    </Image.GestureRecognizers>
                </Image>
                <Label
                	FontSize="Micro"
                	HorizontalOptions="Center"
                	Text="Toca la imagen para cambiarla"
                    TextColor="White">
                </Label>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                    	Grid.Column="0"
                    	Grid.Row="0"
                    	Text="Nombre:"
                    	VerticalOptions="Center"
                        TextColor="White">
                    </Label>
                    <Entry
                    	Grid.Column="1"
                    	Grid.Row="0"
                    	Placeholder="Nombre y Apellido"
                    	Text="{Binding Persona.Nombre}"
                        Margin="10,0,10,0"
                        TextColor="White"
                        PlaceholderColor="DarkGray">
                    </Entry>
                    <Label
                        TextColor="White"
                    	Grid.Column="0"
                    	Grid.Row="1"
                    	Text="Domicilio:"
                    	VerticalOptions="Center">
                    </Label>
                    <Entry
                    	Grid.Column="1"
                    	Grid.Row="1"
                    	Placeholder="Domicilio y Número"
                    	Text="{Binding Persona.Domicilio}"
                        Margin="10,0,10,0"
                        TextColor="White"
                        PlaceholderColor="DarkGray">
                    </Entry>

                    <Label
                        TextColor="White"
                    	Grid.Column="0"
                    	Grid.Row="2"
                    	Text="Relación:"
                    	VerticalOptions="Center">
                    </Label>
                    <Entry
                    	Grid.Column="1"
                    	Grid.Row="2"
                    	Placeholder="Relacion"
                    	Text="{Binding Persona.Relacion}"
                        Margin="10,0,10,0"
                        TextColor="White"
                        PlaceholderColor="DarkGray">
                    </Entry>

                    <Label
                        TextColor="White"
                    	Grid.Column="0"
                    	Grid.Row="3"
                    	Text="Celular:"
                    	VerticalOptions="Center">
                    </Label>
                    <Entry
                    	Grid.Column="1"
                    	Grid.Row="3"
                    	Keyboard="Numeric"
                    	Placeholder="Celular"
                    	Text="{Binding Persona.Celular}"
                        Margin="10,0,10,0"
                        TextColor="White"
                        PlaceholderColor="DarkGray">
                    </Entry>
                    
                </Grid>
                <Grid
                    Padding="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image
	                    HeightRequest="100"
                        Grid.Column="0"
                        Grid.Row="0"
	                    Source="{Binding ImageUrl2}">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ChangeImage2Command}"/>
                        </Image.GestureRecognizers>
                    </Image>

                    <Image
	                    HeightRequest="100"
                        Grid.Column="1"
                        Grid.Row="0"
	                    Source="{Binding ImageUrl3}">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ChangeImage3Command}"/>
                        </Image.GestureRecognizers>
                    </Image>

                </Grid>
                <Label
                	FontSize="Micro"
                	HorizontalOptions="Center"
                	Text="Toca las imagenes para agregar imagenes de otra Epoca"
                    TextColor="White">
                </Label>
                    
                </StackLayout>
            </ScrollView>
            <Grid
                    HorizontalOptions="CenterAndExpand"
                VerticalOptions="EndAndExpand"
                    Padding="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <controls:GradientButton

                        BorderRadius="40"
                        GradientStyle="{Binding SaveColor}"
                        Text="Guardar"
                        VerticalOptions="CenterAndExpand"
                        WidthRequest="120"
                        HeightRequest="50"
                        Command="{Binding SaveCommand}">
                </controls:GradientButton>
                <controls:GradientButton
                        BorderRadius="40"
                        GradientStyle="{Binding BorrarColor}"
                        Text="Borrar"
                            Grid.Column="1"
                        VerticalOptions="CenterAndExpand"
                        WidthRequest="120"
                        HeightRequest="50"
                        Command="{Binding DeleteCommand}">
                </controls:GradientButton>
            </Grid>
        </StackLayout>
    </Grid>
</ContentPage>